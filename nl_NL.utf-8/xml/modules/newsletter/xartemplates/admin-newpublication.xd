<div class="xar-mod-head">
    <span class="xar-mod-title">#$menutitle#</span>
</div>
<div class="xar-mod-body">
    <h2><xar:mlstring>New Publication</xar:mlstring></h2><br />
    <div style="text-align: left;margin: auto;">
        <form action="#xarModURL('newsletter', 'admin', 'createpublication')#" method="post" enctype="application/x-www-form-urlencoded" >
        <input type="hidden" name="authid" id="authid" value="#$authid#" />     
        <table border="0" cellpadding="5">
            <tr>
                <td>
                    <b><xar:mlstring>Choose Owner:</xar:mlstring></b>
                </td>
                <td>
                    <select name="ownerId" tabindex="1">
                        <xar:loop name="$owners">
                            <xar:if condition="$loggeduser['uid'] eq $loop:item['id']">
                                <option name="id" value="#$loop:item['id']#" selected>#$loop:item['name']#</option>
                            <xar:else />
                                <option name="id" value="#$loop:item['id']#">#$loop:item['name']#</option>
                            </xar:if>
                        </xar:loop>
                    </select>
                </td>
            </tr>
            <xar:if condition="$number_of_categories != 0">
                <tr>
                    <td>
                        <b><xar:mlstring>Publication Category:</xar:mlstring></b>
                    </td>
                    <td>
                        <select name="categoryId" tabindex="2">
                            <xar:loop name="$categories">
                                <option name="cid" value="#$loop:item['cid']#">#$loop:item['name']#</option>
                            </xar:loop>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td valign="top">
                        <b><xar:mlstring>Alternative Categories:</xar:mlstring></b>
                    </td>
                    <td>
                        <select name="altcids[]" tabindex="3" multiple size="5">
                            <xar:loop name="$altcategories">
                                <option name="cid" value="#$loop:item['cid']#">#$loop:item['name']#</option>
                            </xar:loop>
                        </select>
                    </td>
                </tr>
            <xar:else />
                <input type="hidden" name="categoryId" id="categoryId" value="0" />       
                <input type="hidden" name="altcids[]" id="altcids" value="0" />
            </xar:if>
            <tr>
                <td>
                    <b><xar:mlstring>Title:</xar:mlstring></b>
                </td>
                <td>
                    <input type="text" name="title" id="title" size="50" maxlength="255" tabindex="4" />
                </td>
            </tr>
            <tr>
                <td valign="top">
                    <b><xar:mlstring>Introduction:</xar:mlstring></b>
                </td>
                <td>
                    <textarea name="introduction" rows="10" cols="50" tabindex="5"></textarea>
                </td>
            </tr>
            <tr>
                <td>
                    <b><xar:mlstring>HTML Template:</xar:mlstring></b>
                </td>
                <td>
                    <input type="text" name="templateHTML" id="templateHTML" size="50" maxlength="50" tabindex="6" value="#$templateHTML#"/>
                </td>
            </tr>
            <tr>
                <td>
                    <b><xar:mlstring>Text Template:</xar:mlstring></b>
                </td>
                <td>
                    <input type="text" name="templateText" id="templateText" size="50" maxlength="50" tabindex="7" value="#$templateText#"/>
                </td>
            </tr>
            <tr>
                <td>
                    <b><xar:mlstring>Email From Name:</xar:mlstring></b> 
                    <br/><font size="1">(Default is owner's name)</font>
                </td>
                <td>
                    <input type="text" name="fromname" id="fromname" size="50" maxlength="100" tabindex="8" />
                </td>
            </tr>
            <tr>
                <td>
                    <b><xar:mlstring>Email From Address:</xar:mlstring></b> 
                    <br/><font size="1">(Default is owner's email address)</font>
                </td>
                <td>
                    <input type="text" name="fromemail" id="fromemail" size="50" maxlength="100" tabindex="9" />
                </td>
            </tr>
            <tr>
                <td valign="top">
                    <b><xar:mlstring>Email Subject:</xar:mlstring></b>
                    <br/><font size="1">(Subject line in sent email)</font>
                </td>
                <td>
                    <select name="subject" tabindex="10">
                        <option name="id" value="0">Issue Title</option>
                        <option name="id" value="1">Publication Title</option>
                        <option name="id" value="2">Publication and Issue Title</option>
                </select>
            </tr>
            <tr>
                <td>
                    <b><xar:mlstring>Logo:</xar:mlstring></b>
                    <br/><font size="1">http://my.site.com/logo.gif</font>
                </td>
                <td>
                    <input type="text" name="logo" id="logo" size="50" maxlength="255" tabindex="11" />
                </td>
            </tr>
            <tr>
                <td>
                    <b><xar:mlstring>Default Number of Days before Link Expires:</xar:mlstring></b>
                </td>
                <td>
                    <input type="text" name="linkExpiration" id="linkExpiration" value="#$linkExpiration#" size="4" maxlength="4" tabindex="12" />
                    &nbsp;<xar:mlstring>(0 = link never expires)</xar:mlstring>
                <td>
            </tr>
            <tr>
                <td>
                    <b><xar:mlstring>Text for Link Registration:</xar:mlstring></b>
                </td>
                <td>
                    <textarea name="linkRegistration" rows="3" cols="50" tabindex="13">#$linkRegistration#</textarea>
                <td>
            </tr>
            <tr>
                <td>
                    <b><xar:mlstring>Private Publication:</xar:mlstring></b> 
                </td>
                <td>
                    <xar:if condition="$private eq 1">
                        <input type="checkbox" name="private" value="1" checked tabindex="14" />
                    <xar:else />
                        <input type="checkbox" name="private" value="1" tabindex="15" />
                    </xar:if>
                </td>
            </tr>
            <tr>
                <td valign="top">
                    <b><xar:mlstring>Disclaimer:</xar:mlstring></b>
                </td>
                <td>
                    <xar:if condition="!empty($disclaimers)">
                        <select name="disclaimerId" tabindex="16">
                        <option value=0>Choose Disclaimer</option>
                            <xar:loop name="$disclaimers">
                                <option name="id" value="#$loop:item['id']#">#$loop:item['title']#</option>
                            </xar:loop>
                        </select>
                        <br /><br />
                    </xar:if>
                    <xar:mlstring>Add a new disclaimer:</xar:mlstring></b>
                    <br /><br />
                    <textarea name="newdisclaimer" rows="3" cols="50" tabindex="17"></textarea>
                </td>
            </tr>
            <tr>
                <td valign="top">
                    <b><xar:mlstring>Description:</xar:mlstring></b>
                    <br/><font size="1">(Shown on subscription page)</font>
                </td>
                <td>
                    <textarea name="description" rows="10" cols="50" tabindex="18"></textarea>
                </td>
            </tr>
            <tr>
                <td colspan="2" align="center">
                    <br /><br />
                    <input type="submit" value="#$addlabel#"  tabindex="19" />
                </td>
            </tr>
        </table>            
        </form>
    </div>
</div>
